<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"
tools:context=".TabFragment1">

<!-- TODO: Update blank fragment layout -->
<TextView
    android:id="@+id/frag1_title"
    android:layout_width="200dp"
    android:layout_height="40dp"
    android:textSize="20sp"
    android:textColor="#EEE"
    android:text="Scan the QR Code!" />

<TextView
    android:id="@+id/frag1_subtitle"
    android:textColor="#EEE"
    android:text="We take care of the rest ;)"
    android:textSize="16sp"
    android:layout_marginTop="10dp"
    android:layout_below="@id/frag1_title"
    android:layout_width="200dp"
    android:layout_height="40dp" />

    <!--android:onClick="frag1_scanQRCode"-->
<Button
    android:id="@+id/frag1_takePicture"
    android:layout_marginTop="10dp"
    android:background="#353839"
    android:text="Scan &amp; Buy!"
    android:textColor="#EEE"
    android:layout_below="@id/frag1_subtitle"
    android:layout_width="200dp"
    android:layout_height="40dp" />

</RelativeLayout>
